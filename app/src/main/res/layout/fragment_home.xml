<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

    <Button
            android:text="Slazenger"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/slazengerButton"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            style="@android:style/Widget.Holo.Button"
            app:layout_constraintHorizontal_bias="0.58"
            app:layout_constraintTop_toBottomOf="@+id/robinButton"/>
    <Button
            android:text="Tretorn"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tretornButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            style="@android:style/Widget.Holo.Button"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/tecnifibreButton"/>
    <Button
            android:text="Wilson"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/wilsonButton"
            style="@android:style/Widget.Holo.Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="140dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/tretornButton"/>
    <Button
            android:text="Tecnifibre"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/tecnifibreButton"
            style="@android:style/Widget.Holo.Button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp" android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/slazengerButton"/>
    <Button
            android:text="Dunlop"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/dunlopButton"
            style="@android:style/Widget.Holo.Button"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.285"
            app:layout_constraintTop_toBottomOf="@+id/babolatButton"/>
    <Button
            android:text="Head"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/headButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            style="@android:style/Widget.Holo.Button"
            app:layout_constraintHorizontal_bias="0.476"
            app:layout_constraintTop_toBottomOf="@+id/dunlopButton"/>
    <Button
            android:text="Robin Soderling"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/robinButton"
            style="@android:style/Widget.Holo.Button" android:layout_marginEnd="140dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintTop_toBottomOf="@+id/headButton"/>
    <Button
            android:text="Babolat"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/babolatButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="140dp"
            android:layout_marginEnd="140dp" app:layout_constraintEnd_toEndOf="parent"
            style="@android:style/Widget.Holo.Button" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toBottomOf="@+id/text_home" android:layout_marginTop="10dp"/>
    <TextView
            android:id="@+id/text_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="75dp"
            android:textAlignment="center"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp" android:text="Wiodący producenci piłek"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/design_default_color_on_primary"
            android:backgroundTint="@color/design_default_color_secondary_variant"
            android:background="@color/colorAccent"/>
    <TextView
            android:text="Poszukaj piłki idealnej dla Ciebie!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@+id/wilsonButton"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp" app:layout_constraintEnd_toEndOf="parent"
            android:textStyle="bold|italic"
            android:textColor="@color/design_default_color_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>