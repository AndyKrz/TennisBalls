<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="false">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.company.TecnifibreFragment">

    <androidx.cardview.widget.CardView
            android:layout_width="417dp"
            android:layout_height="254dp"
            app:layout_constraintTop_toBottomOf="@+id/tecnifibreChamp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tecnifibreXld" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="50dp">

        <TextView
                android:text="Wytrzymałość: 6/10 Twardość: 7/10 Ocena: 5.5/10"
                android:layout_width="144dp"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
        <ImageView
                android:layout_width="91dp"
                android:layout_height="214dp"
                app:srcCompat="@drawable/tecnifibre_xld"
        />
        <TextView
                android:text="@string/tecnifibre_xld"
                android:id="@+id/tecniXLD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" android:textStyle="bold"/>
        <TextView
                android:layout_width="311dp"
                android:layout_height="168dp"
                android:text="Piłki treningowe (bezciśnieniowe) przeznaczone na twarde nawierzchnie. Wytwarzane we współpracy z renomowanym producentem opon - firmą BRIDGESTONE. 40% naturalnej wełny w filcu piłki. Pakowane po cztery piłki w plastikowej puszce. Zaakceptowane przez ITF."
                android:layout_margin="100dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="411dp"
            android:layout_height="297dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tecnifibreChamp">
        <TextView
                android:text="Wytrzymałość: 6/10 Twardość: 6/10 Ocena: 5/10"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="248dp"
                app:srcCompat="@drawable/tecnifibre_champion"
        />
        <TextView
                android:text="@string/tecnifibre_champion"
                android:id="@+id/tecnifibreCha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" android:textStyle="bold"/>
        <TextView
                android:layout_width="306dp"
                android:layout_height="186dp"
                android:text="Ciśnieniowe piłki tenisowe przeznaczone do gry na wszystkich nawierzchniach kortów tenisowych. Piłki posiadają filc składający się w 40% z naturalnej wełny i bawełny. Rdzeń opracowany został przy współpracy z firmą BRIDGESTONE - producentem opon. Zapewnia to dużą wytrzymałość oraz utrzymanie właściwości przez długi czas. Zaakceptowane przez ITF. W opakowanu znajdują się trzy piłki."
                android:layout_margin="100dp"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>