            android:id="@+id/wilsonTourClay">
        <TextView
                android:text="Wytrzymałość: 7/10 Twardość: 6/10 Ocena: 7/10"
                android:layout_width="144dp"
                android:layout_height="wrap_content" android:id="@+id/textView9"
                android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
        <ImageView
                android:layout_width="91dp"
                android:layout_height="214dp"
                app:srcCompat="@drawable/wilson_tour_premier_clay_court"
        />
        <TextView
                android:text="@string/wilson_tour_premier_clay_court"
                android:id="@+id/wilsonTPCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" android:textStyle="bold"/>
        <TextView
                android:layout_width="311dp"
                android:layout_height="168dp"
                android:text="Piłki tenisowe Wilson Tour Premier w mocno jaskrawym żółtym filcu zapewnia lepszą widoczność a unikalne włókno z filcu, zapewniające doskonały komfort i łatwość gry. Dodatkowo charakteryzuje się długą wytrzymałością. Zaakceptowana przez ITF. Lekko zmodyfikowana konstrukcja dedykowana na nawierzchnie ceglane."
                android:layout_margin="100dp"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="417dp"
            android:layout_height="254dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/wilsonTour">
        <TextView
                android:text="Wytrzymałość: 8/10 Twardość: 8/10 Ocena: 8.5/10"
                android:layout_width="144dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
        <ImageView
                android:layout_width="91dp"
                android:layout_height="214dp"
                app:srcCompat="@drawable/wilson_tour_premier_all_court"
        />
        <TextView
                android:text="@string/wilson_tour_premier_all_court"
                android:id="@+id/wilsonTPAC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp" android:textStyle="bold"/>
        <TextView
                android:layout_width="306dp"
                android:layout_height="141dp"
                android:text="Piłki tenisowe Wilson Tour Premier w mocno jaskrawym żółtym filcu zapewnia lepszą widoczność a unikalne włókno z filcu, zapewniające doskonały komfort i łatwość gry. Piłka ta została zaprojektowana na wzór piłki Wilson Australian Open. Dodatkowo charakteryzuje się długą wytrzymałością. Zaakceptowana przez ITF. "
                android:layout_margin="100dp"/>
    </androidx.cardview.widget.CardView>
