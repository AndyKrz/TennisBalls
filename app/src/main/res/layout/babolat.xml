<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fillViewport="false">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".ui.company.BabolatFragment"
            >
        <androidx.cardview.widget.CardView
                android:layout_width="416dp"
                android:layout_height="221dp"
                android:id="@+id/Card_bab_clay"
                app:layout_constraintTop_toBottomOf="@+id/cardView3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="60dp">
            <TextView
                    android:text="Wytrzymałość: 6/10 Twardość: 6/10 Ocena: 6/10"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content" android:id="@+id/textView11"
                    android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
            <TextView
                    android:text="Piłki tenisowe Babolat TEAM CLAY. Wcześniej model występował pod inną nazwą - Babolat French Open Clay Court. Jest to ta sama piłka, tylko zmieniona została nazwa, oraz odświeżone zostało opakowanie. "
                    android:layout_width="247dp"
                    android:layout_height="109dp" android:id="@+id/textView7"
                    android:layout_margin="100dp"/>
            <TextView
                    android:text="@string/babolat_team_clay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/babolatTC"
                    android:layout_marginLeft="100dp" android:textStyle="bold"/>
            <ImageView
                    android:src="@drawable/babolat_team_clay"
                    android:layout_width="80dp"
                    android:layout_height="184dp" android:id="@+id/imageView5"/>
            <ToggleButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/myToggleButton"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="416dp"
                android:layout_height="198dp"
                android:id="@+id/cardView" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">
            <ImageView
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/babolat_french_open_clay_court"
                    android:id="@+id/imageView"/>
            <TextView
                    android:text="@string/babolat_roland_garros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/babolatRG"
                    android:layout_marginLeft="100dp" android:textStyle="bold"/>
            <TextView
                    android:text="Piłki ciśnieniowe - oficjalne piłki turniejowe turnieju French Open Roland Garros. Zoptymalizowane pod grę na kortach ceglastych.  "
                    android:layout_width="228dp"
                    android:layout_height="92dp" android:id="@+id/textView2"
                    android:layout_margin="100dp"/>
            <TextView
                    android:text="Wytrzymałość: 8/10 Twardość: 8/10 Ocena: 7.5/10"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content" android:id="@+id/textView8"
                    android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="411dp"
                android:layout_height="203dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView" android:id="@+id/cardView2"
                app:layout_constraintStart_toStartOf="parent">
            <TextView
                    android:text="Wytrzymałość: 5/10 Twardość: 6/10 Ocena: 5/10"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content" android:id="@+id/textView9"
                    android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
            <ImageView
                    android:layout_width="78dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/babolat_gold"
                    android:id="@+id/imageView2"/>
            <TextView
                    android:text="Babolat Gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/babolat_Gold"
                    android:layout_marginLeft="100dp" android:textStyle="bold"/>
            <TextView
                    android:layout_width="225dp"
                    android:layout_height="104dp" android:id="@+id/textView4"
                    android:text="Piłki tenisowe dla tenisistów grających klubowo. Uniwersalna na wszystkie rodzaje nawierzchni. Wytrzymała piłka z niską utratą naprężenia."
                    android:layout_margin="100dp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
                android:layout_width="429dp"
                android:layout_height="196dp"
                app:layout_constraintTop_toBottomOf="@+id/cardView2"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/cardView3">
            <TextView
                    android:text="Wytrzymałość: 6/10 Twardość: 7/10 Ocena: 6.5/10"
                    android:layout_width="144dp"
                    android:layout_height="wrap_content" android:id="@+id/textView10"
                    android:layout_marginLeft="100dp" android:layout_marginTop="30dp"/>
            <ImageView
                    android:layout_width="77dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/babolat_team_all_court" android:id="@+id/imageView3"/>
            <TextView
                    android:text="@string/babolat_team_all_court"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/babolatTAC"
                    android:layout_marginLeft="100dp" android:textStyle="bold"/>
            <TextView
                    android:text="Piłki tenisowe Babolat TEAM ALL COURT. Wcześniej model występował pod inną nazwą - Babolat French Open All Court. Jest to ta sama piłka, tylko zmieniona została nazwa, oraz odświeżone zostało opakowanie."
                    android:layout_width="299dp"
                    android:layout_height="90dp" android:id="@+id/babolatTeamAll"
                    android:layout_margin="100dp"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="40dp" app:srcCompat="@android:drawable/btn_star"
                    android:id="@+id/imageButton"/>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>